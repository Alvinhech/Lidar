CC=g++
LIBS=opencv
CFLAGS= -Wall -std=c++11 -fpermissive

LDFLAGS= -L. librplidar_sdk.a `pkg-config --libs $(LIBS)` -pthread -lzmq -lboost_serialization

TARGET= radar_no
SRCS= ./src/radar_no.cpp

INC= -I ./include -I ./src
OBJS= $(SRCS:.cpp=.o)

$(TARGET):
	$(CC) $(CFLAGS) $(INC) -g -o $@ $(SRCS) librplidar_sdk.a $(LDFLAGS)

clean:
	rm -rf $(TARGET) $(OBJS)

